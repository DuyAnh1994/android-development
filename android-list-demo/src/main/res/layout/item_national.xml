<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_national">

    <data>

        <import type="com.dev.anhnd.android_list_demo.national.National" />

        <import type="com.dev.anhnd.android_list_demo.national.NationalListener" />

        <import type="androidx.lifecycle.MutableLiveData" />

        <import type="java.util.Stack" />

        <variable
            name="item"
            type="National" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="itemListener"
            type="NationalListener" />

        <variable
            name="liveSelect"
            type="MutableLiveData&lt;Stack&lt;National>>" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/ripple_click_square">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#8BC34A"
                android:gravity="center"
                android:text="Edit"
                android:textColor="#FFFFFF"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/btnDelete" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnDelete"
                deBounceClick="@{()->itemListener.onDeleteItem(itemPosition, item)}"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn_delete"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#FFFFFF"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_content"
            deBounceClick="@{()->itemListener.onClickItem(itemPosition, item)}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_click_square"
            android:clickable="true"
            android:focusable="true"
            android:onLongClick="@{()->itemListener.onLongClickItem(itemPosition, item)}"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ivSelected"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@{liveSelect.search(item) != -1 ? @drawable/bg_selected : @drawable/bg_unselected}"
                android:gravity="center"
                android:text="@{liveSelect.search(item) == -1 ? @string/empty : String.valueOf(liveSelect.indexOf(item) + 1)}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/bg_selected"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlag"
                loadBackground="@{item.flag}"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="@id/ivSelected"
                app:layout_constraintStart_toEndOf="@id/ivSelected"
                app:layout_constraintTop_toTopOf="@id/ivSelected"
                tools:src="@drawable/ic_launcher_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="@{String.valueOf(itemPosition + 1) + `. ` + item.name}"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/ivSelected"
                app:layout_constraintEnd_toStartOf="@id/ivDrag"
                app:layout_constraintStart_toEndOf="@id/ivFlag"
                app:layout_constraintTop_toTopOf="@id/ivSelected"
                tools:text="1. Viá»‡t Nam" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/ic_drag"
                app:layout_constraintBottom_toBottomOf="@id/ivSelected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivSelected" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
