<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.view.View.OnClickListener" />

        <import type="androidx.recyclerview.widget.RecyclerView.Adapter" />

<!--        <import type="com.dev.anhnd.android_coroutines_flow.ui.task.TaskViewModel" />-->

        <import type="androidx.lifecycle.MutableLiveData"/>

<!--        <variable-->
<!--            name="viewModelF"-->
<!--            type="TaskViewModel" />-->

        <variable
            name="adapter"
            type="Adapter" />

        <variable
            name="viewListener"
            type="OnClickListener" />

        <variable
            name="liveHideCompleted"
            type="MutableLiveData&lt;Boolean>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:hint="search"
            android:inputType="number"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/btnSort"
            app:layout_constraintEnd_toStartOf="@id/btnSort"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnSort"
            tools:text="search" />
<!--            android:text="@={viewModelF.liveSearchQuery}"-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnSort"
            deBounceClick="@{viewListener::onClick}"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/ripple_click_square"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sort"
            app:layout_constraintBottom_toBottomOf="@id/cbHideCompleted"
            app:layout_constraintEnd_toStartOf="@id/cbHideCompleted"
            app:layout_constraintTop_toTopOf="@id/cbHideCompleted" />

<!--            android:checked="@{viewModelF.liveHideCompleted}"-->
        <com.google.android.material.checkbox.MaterialCheckBox
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cbHideCompleted"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvTask"
            rv_set_adapter="@{adapter}"
            rv_set_fix_size="@{true}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/edtSearch"
            tools:listitem="@layout/item_task" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddTask"
            deBounceClick="@{viewListener::onClick}"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_20sdp"
            android:gravity="center"
            android:src="@drawable/ic_add"
            app:fabCustomSize="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
