<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dev.anhnd.android_coroutines_flow.data.local.Task" />

        <import type="com.dev.anhnd.android_coroutines_flow.ui.task.TaskListener" />

        <import type="androidx.lifecycle.MutableLiveData" />

        <variable
            name="item"
            type="Task" />

        <variable
            name="itemListener"
            type="TaskListener" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="liveCompletedTask"
            type="MutableLiveData&lt;Boolean>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        deBounceClick="@{()->itemListener.onClickItem(itemPosition, item)}"
        android:onLongClick="@{()->itemListener.onLongLickItem(itemPosition, item)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_click_square"
        android:padding="@dimen/_10sdp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:checked="@{item.completed}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@{item.name}"
            app:layout_constraintBottom_toBottomOf="@id/cbCompleted"
            app:layout_constraintEnd_toStartOf="@id/ivPriority"
            app:layout_constraintStart_toEndOf="@id/cbCompleted"
            app:layout_constraintTop_toTopOf="@id/cbCompleted"
            app:tv_set_strike="@{item.completed}"
            tools:text="fiawheughuwaheguewhguhweguihwieuhguiwheguihwea" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPriority"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>