<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dev.anhnd.android_viewpager.model.Student" />

        <import type="com.dev.anhnd.android_viewpager.collection.CollectionListener" />

        <variable
            name="item"
            type="Student" />
        
        <variable
            name="itemListener"
            type="CollectionListener" />

        <variable
            name="itemPosition"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        deBounceClick="@{()->itemListener.onClickItem(itemPosition)}"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="@{item.name}"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="student name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>