<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dev.anhnd.mybase.utils.adapter.BaseMultiHolderAdapter" />

        <import type="com.dev.anhnd.android_mvvm.ui.main.ItemNewsListener" />

        <import type="com.dev.anhnd.mybase.utils.adapter.BaseMultiHolderAdapter.BaseModelType" />

        <variable
            name="item"
            type="BaseModelType" />

        <variable
            name="itemListener"
            type="ItemNewsListener" />

        <variable
            name="itemPosition"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        deBounceClick="@{()->itemListener.onItemClick(tvContent, item, itemPosition)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContent"
            tv_set_text_by_multi_holder="@{item}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Demo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
