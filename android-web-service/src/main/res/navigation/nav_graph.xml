<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dev.anhnd.android_web_service.ui.home.HomeFragment"
        android:label="HomeFramgnet"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_movieFramgnet"
            app:destination="@id/movieFramgnet" />
        <action
            android:id="@+id/action_homeFragment_to_peopleFragment"
            app:destination="@id/peopleFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieFramgnet"
        android:name="com.dev.anhnd.android_web_service.ui.movies.MovieFragment"
        android:label="MovieFragment"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.dev.anhnd.android_web_service.ui.people.PeopleFragment"
        android:label="PeopleFragment"
        tools:layout="@layout/fragment_people" />


</navigation>
