<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dev.anhnd.android_note_todos.ui.main.MainViewModel" />

        <import type="com.dev.anhnd.android_note_todos.ui.home.HomeViewModel" />

        <import type="androidx.recyclerview.widget.RecyclerView.Adapter" />

        <variable
            name="mainViewModel"
            type="MainViewModel" />

        <variable
            name="viewModelF"
            type="HomeViewModel" />

        <variable
            name="adapter"
            type="Adapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNote"
            rvSetFixSize="@{true}"
            rv_set_adapter="@{adapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rlHeader"
            app:spanCount="2"
            tools:listitem="@layout/item_note" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>