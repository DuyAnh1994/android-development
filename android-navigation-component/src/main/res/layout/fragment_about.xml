<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View.OnClickListener" />

        <import type="com.dev.anhnd.android_navigation_component.main.MainViewModel" />

        <import type="androidx.lifecycle.MutableLiveData" />

        <variable
            name="viewListener"
            type="OnClickListener" />

        <variable
            name="mainViewModel"
            type="MainViewModel" />


        <variable
            name="count"
            type="MutableLiveData&lt;Integer>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2673AB7">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            deBounceClick="@{viewListener::onClick}"
            android:layout_width="@dimen/_50sdp"
            android:background="?selectableItemBackground"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="center"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            deBounceClick="@{viewListener::onClick}"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCount"
            deBounceClick="@{viewListener::onClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`tap: ` + String.valueOf(count)}"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnText"
            deBounceClick="@{viewListener::onClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{mainViewModel.liveText}"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@id/btnCount"
            app:layout_constraintStart_toStartOf="@id/btnCount"
            app:layout_constraintTop_toBottomOf="@id/btnCount"
            tools:text="text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
