<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.dev.anhnd.android_nested_recycleview.model.Nation" />

        <import type="com.dev.anhnd.android_nested_recycleview.ui.home.NationListener" />

        <variable
            name="item"
            type="com.dev.anhnd.android_nested_recycleview.model.Nation" />

        <variable
            name="itemPosition"
            type="Integer" />

        <variable
            name="itemListener"
            type="com.dev.anhnd.android_nested_recycleview.ui.home.NationListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_movie"
        deBounceClick="@{()->itemListener.onNation(itemPosition,item)}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mcvFlag"
            loadBackground="@{item.flag}"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic">
        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{item.name}"
            app:layout_constraintEnd_toEndOf="@id/mcvFlag"
            app:layout_constraintStart_toStartOf="@id/mcvFlag"
            app:layout_constraintTop_toBottomOf="@id/mcvFlag"
            tools:text="@tools:sample/lorem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>